{
  "version": 2,
  "builds": [
    {
      "src": "src/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/webhook",
      "dest": "/src/server.js"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/src/server.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/src/server.js"
    },
    {
      "src": "/public/(.*)",
      "dest": "/src/server.js"
    },
    {
      "src": "/(.*\\.(css|js|png|jpg|jpeg|svg|ico|json|html))",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/src/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "regions": ["cpt1"]
}